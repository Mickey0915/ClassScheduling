<Page
    x:Class="ClassScheduler.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassScheduler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
 >

    <Page.Resources>
        <Style x:Key="ListIconStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextAlignment" Value="DetectFromContent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        <Style x:Key="ListDescirptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="TextAlignment" Value="DetectFromContent"/>
            <Setter Property="Margin" Value="20,0,0,0"/>
        </Style>
        
        
        <!-- <Style x:Key="ListBoxStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Style.BasedOn>
                <Setter Property="Style" Value="{StaticResource ListIconStyle}"/>
               
            </Style.BasedOn>
        </Style> -->

     
        
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <SplitView Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="132"
                   CompactPaneLength="48"
                   Grid.Row="1"
                   >
            <SplitView.Pane>
                <ListBox Name="MyListbox"
                         SelectionMode="Single"
                         SelectionChanged="MyListbox_SelectionChanged"
                         >
                   



                    <ListBoxItem Name="HamburgerMenu" Tapped="HamburgerMenu_Tapped" Height="48">
                        <TextBlock Style="{StaticResource ListIconStyle}"
                                   Text="&#xE700;"
                                   Width="48"                               
                                   Margin="4,0,0,0"
                                   Foreground="Orange"/>

                    </ListBoxItem>
                    <ListBoxItem Name="ScheduleIcon">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ListIconStyle}"
                                       Text="&#xE162;"/>
                            <TextBlock Style="{StaticResource ListDescirptionStyle}"
                                       Text="Schedule"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="ShareIcon">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Style="{StaticResource ListIconStyle}"
                                       Text="&#xE72D;"/>
                            <TextBlock Style="{StaticResource ListDescirptionStyle}"
                                       Text="Share"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBox.Background>
                        <SolidColorBrush Color="White"/>
                    </ListBox.Background>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Name="MyFrame">
                    
                </Frame>
            </SplitView.Content>
        </SplitView>
        
      
    </Grid>
   
</Page>
