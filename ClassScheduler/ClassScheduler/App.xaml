<Application
    x:Class="ClassScheduler.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassScheduler"
    RequestedTheme="Light">

    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="ListIconStyle">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="TextAlignment" Value="DetectFromContent"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ListDescription">

        </Style>
    </Application.Resources>
</Application>
